<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE install SYSTEM "/home/moffats/public_html/eclipse-remote/jinstallmanager/resources/plugin-install.dtd" >
<extension group="system" type="plugin" version="2.5.0" method="upgrade">
	<name>System - JAuthTools Synchronization Plugin</name>
	<creationDate>26-Jul-2007</creationDate>
	<author>Sam Moffatt</author>
	<authorEmail>pasamio@pasamio.id.au</authorEmail>
	<authorUrl>http://pasamio.id.au</authorUrl>
	<copyright>2012 (C) Sam Moffatt</copyright>
	<license>GNU/GPL</license>
	<version>2.5.0</version>
	<description>JAuthTools Synchronization utilizes user source plugins to update user details</description>
	<files>
		<filename plugin="sync">sync.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" label="Basic">
				<field name="demoteuser" type="radio" default="1" label="Demote Users" description="Demote users if their group mapping or default user settings are different.">
					<option value="0">No</option>
					<option value="1">Yes</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<update>http://www.jsitepoint.com/update/plugins/plgsystemsync</update>
</extension>
