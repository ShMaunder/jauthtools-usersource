<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin"  group="usersource">
	<name>User Source - CSV</name>
	<author>Sam Moffatt</author>
	<creationDate>April 2012</creationDate>
	<copyright>(C) 2012 Sam Moffatt. All rights reserved.</copyright>
	<license>http://www.gnu.org/copyleft/gpl.html GNU/GPL</license>
	<authorEmail>pasamio@gmail.com</authorEmail>
	<authorUrl>http://sammoffatt.com.au/</authorUrl>
	<version>2.5.0</version>
	<update>http://www.jsitepoint.com/update/plugins/plgusersourceldap</update>
	<description>Retrieves users from a CSV file.</description>
	<files>
		<filename plugin="csv">csv.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" label="Basic">
				<field name="sourcefile" type="text" size="100" default="" label="CSV File Path" description="Path to the CSV file with the information." />
			</fieldset>
		</fields>
	</config>
</extension>
